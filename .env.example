# Disable Next.js telemetry (stops dev server from hanging on "Waiting for telemetryâ€¦")
NEXT_TELEMETRY_DISABLED=1

# Optional HTTP Basic Auth. Set to enable; remove or leave unset to disable. Any username works.
# BASIC_AUTH_PASSWORD=your-password

# Cardano network (Preview | Preprod | Mainnet)
NEXT_PUBLIC_CARDANO_NET=Preview

# Blockfrost API URLs (public)
NEXT_PUBLIC_BLOCKFROST_URL_PREVIEW=https://cardano-preview.blockfrost.io/api/v0
NEXT_PUBLIC_BLOCKFROST_URL_PREPROD=https://cardano-preprod.blockfrost.io/api/v0
NEXT_PUBLIC_BLOCKFROST_URL_MAINNET=https://cardano-mainnet.blockfrost.io/api/v0

# Blockfrost API keys (server-side only; required for Blockfrost proxy and /api/health/ready)
BLOCKFROST_KEY_PREVIEW=
BLOCKFROST_KEY_PREPROD=
BLOCKFROST_KEY_MAINNET=

# Blockchain explorer URLs (for transaction links)
NEXT_PUBLIC_BLOCKCHAIN_EXPLORER_URL_PREVIEW=https://preview.cexplorer.io/
NEXT_PUBLIC_BLOCKCHAIN_EXPLORER_URL_PREPROD=https://preprod.cexplorer.io/
NEXT_PUBLIC_BLOCKCHAIN_EXPLORER_URL_MAINNET=https://cexplorer.io/

# cNIGHT currency (policy ID and encoded name per network)
NEXT_PUBLIC_PREVIEW_CNIGHT_CURRENCY_POLICY_ID=d2dbff622e509dda256fedbd31ef6e9fd98ed49ad91d5c0e07f68af1
NEXT_PUBLIC_PREPROD_CNIGHT_CURRENCY_POLICY_ID=d2dbff622e509dda256fedbd31ef6e9fd98ed49ad91d5c0e07f68af1
NEXT_PUBLIC_MAINNET_CNIGHT_CURRENCY_POLICY_ID=d2dbff622e509dda256fedbd31ef6e9fd98ed49ad91d5c0e07f68af1
NEXT_PUBLIC_PREVIEW_CNIGHT_CURRENCY_ENCODEDNAME=
NEXT_PUBLIC_PREPROD_CNIGHT_CURRENCY_ENCODEDNAME=
NEXT_PUBLIC_MAINNET_CNIGHT_CURRENCY_ENCODEDNAME=

# Midnight indexer GraphQL endpoint
NEXT_PUBLIC_INDEXER_ENDPOINT=https://indexer.preview.midnight.network/api/v3/graphql

# Optional: React Server / simulation (leave empty unless used)
NEXT_PUBLIC_REACT_SERVER_API_URL=
NEXT_PUBLIC_REACT_SERVER_URL=
NEXT_PUBLIC_SIMULATION_MODE=false
